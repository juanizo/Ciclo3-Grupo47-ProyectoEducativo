@model EducacionVirtual.App.Presentacion.Pages.RegistroProfesorModel
@{
}

<div id="cuerpo">
    <div id="encabezado">
        <div class="navbar">
            <div id="logo">

            </div>
        </div>
    </div>

    </br>
    </br>
    </br>
    </br>
    <H3 class="text-info;">Registrarse</H3>
    <br>
    <div class="container" style="background-color: #1A1D21; ">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container" style="padding: 50px; ">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Nombre"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Profesor.Nombre" class="form-control">
                        </div>
                        <span asp-validation-for="Profesor.Nombre" class="text-danger"></span>
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Apellidos"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Profesor.Apellidos" class="form-control">
                        </div>
                        <span asp-validation-for="Profesor.Apellidos" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Email"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Profesor.Email" class="form-control">
                        </div>
                        <span asp-validation-for="Profesor.Email" class="text-danger"></span>
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Edad"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Profesor.Edad" class="form-control">
                        </div>
                        <span asp-validation-for="Profesor.Edad" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Telefono"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Profesor.Telefono" class="form-control">
                        </div>
                        <span asp-validation-for="Profesor.Telefono" class="text-danger"></span>
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Direccion"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Profesor.Direccion" class="form-control">
                        </div>
                        <span asp-validation-for="Profesor.Direccion" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Especializacion"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Profesor.Especializacion" class="form-control">
                        </div>
                        <span asp-validation-for="Profesor.Especializacion" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2 offset-sm-2">
                            <input type="submit" value="Crear" class="btn btn-primary form-control">
                        </div>
                        <div class="col-sm-2">
                            <a asp-page="/Index" class="btn btn-success form-control">Volver</a>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>

